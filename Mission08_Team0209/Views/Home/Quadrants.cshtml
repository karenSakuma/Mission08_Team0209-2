@model List<Mission08_Team0209.Models.Task>

@{
    ViewData["Title"] = "Task Quadrants";
}

<h2 class="text-center mb-4 fw-bold text-primary">Task Quadrants</h2>

<div class="container">
    <div class="row text-center mb-2 fw-bold">
        <div class="col-md-4"></div> <!-- Empty cell for alignment -->
        <div class="col-md-4 text-uppercase">Urgent</div>
        <div class="col-md-4 text-uppercase">Not Urgent</div>
    </div>

    <div class="row">
        <!-- Important Row -->
        <div class="col-md-4 d-flex align-items-center justify-content-center fw-bold text-uppercase">Important</div>
        <div class="col-md-4">
            <!-- Quadrant I: Important / Urgent -->
            <div class="card shadow-sm">
                <div class="card-header fw-bold bg-danger text-white">
                    Quadrant I: Important / Urgent
                </div>
                <div class="card-body">
                    @foreach (var task in Model.Where(t => t.QuandrantNumber == 1 && !t.IsCompleted))
                    {
                        <div class="task-item p-3 border rounded bg-light mb-3">
                            <h6 class="mb-1 fw-semibold">@task.TaskName</h6>
                            <p class="mb-1 text-muted">
                                <strong>Due:</strong> @(string.IsNullOrEmpty(task.DueDate) ? "No due date" : task.DueDate) <br>
                                <strong>Category:</strong> @(task.Category?.CategoryName ?? "Uncategorized")
                            </p>
                            <div class="d-flex gap-2 flex-wrap">
                                <a class="btn btn-outline-success btn-sm" asp-controller="Home" asp-action="Complete" asp-route-id="@task.TaskId">✓ Complete</a>
                                <a class="btn btn-outline-primary btn-sm" asp-controller="Home" asp-action="AddEdit" asp-route-id="@task.TaskId">✎ Edit</a>
                                <a class="btn btn-outline-danger btn-sm" asp-controller="Home" asp-action="Delete" asp-route-id="@task.TaskId" onclick="return confirm('Are you sure you want to delete this task?');">🗑 Delete</a>
                            </div>
                        </div>
                    }
                    @if (!Model.Any(t => t.QuandrantNumber == 1 && !t.IsCompleted))
                    {
                        <p class="text-muted text-center">No tasks in this quadrant.</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <!-- Quadrant II: Important / Not Urgent -->
            <div class="card shadow-sm">
                <div class="card-header fw-bold bg-success text-white">
                    Quadrant II: Important / Not Urgent
                </div>
                <div class="card-body">
                    @foreach (var task in Model.Where(t => t.QuandrantNumber == 2 && !t.IsCompleted))
                    {
