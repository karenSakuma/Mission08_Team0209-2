                                <strong>Category:</strong> @(task.Category?.CategoryName ?? "Uncategorized")
                            </p>
                            <div class="d-flex gap-2 flex-wrap">
                                <a class="btn btn-outline-success btn-sm" asp-controller="Home" asp-action="Complete" asp-route-id="@task.TaskId">✓ Complete</a>
                                <a class="btn btn-outline-primary btn-sm" asp-controller="Home" asp-action="AddEdit" asp-route-id="@task.TaskId">✎ Edit</a>
                                <a class="btn btn-outline-danger btn-sm" asp-controller="Home" asp-action="Delete" asp-route-id="@task.TaskId" onclick="return confirm('Are you sure you want to delete this task?');">🗑 Delete</a>
                            </div>
                        </div>
                    }
                    @if (!Model.Any(t => t.QuandrantNumber == 2 && !t.IsCompleted))
                    {
                        <p class="text-muted text-center">No tasks in this quadrant.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <!-- Not Important Row -->
        <div class="col-md-4 d-flex align-items-center justify-content-center fw-bold text-uppercase">Not Important</div>
        <div class="col-md-4">
            <!-- Quadrant III: Not Important / Urgent -->
            <div class="card shadow-sm">
                <div class="card-header fw-bold bg-warning text-dark">
                    Quadrant III: Not Important / Urgent
                </div>
