                <div class="card-header fw-bold bg-secondary text-white">
                    Quadrant IV: Not Important / Not Urgent
                </div>
                <div class="card-body">
                    @foreach (var task in Model.Where(t => t.QuandrantNumber == 4 && !t.IsCompleted))
